{
  "name": "@maxmilton/oxlint-config",
  "version": "0.0.1",
  "description": "Shared oxlint configurations targeting the Bun ecosystem",
  "repository": "github:maxmilton/oxlint-config",
  "bugs": "https://github.com/maxmilton/oxlint-config/issues",
  "author": "Max Milton <max@2okki.com>",
  "license": "MIT",
  "type": "module",
  "main": "recommended.json",
  "files": [
    "pedantic.json",
    "recommended.json",
    "stage1.json"
  ],
  "scripts": {
    "lint": "bun lint:fmt && bun lint:js && bun lint:js2 && bun lint:ts",
    "lint:fmt": "biome check",
    "lint:js": "oxlint --report-unused-disable-directives-severity=error",
    "lint:js2": "eslint",
    "lint:ts": "tsc --noEmit",
    "test": "bun test --only-failures",
    "test:ci": "bun test --coverage --randomize --rerun-each=3"
  },
  "peerDependencies": {
    "oxlint": "^1.32.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@eslint/js": "9.39.1",
    "@maxmilton/eslint-config": "0.3.0",
    "@types/bun": "1.3.4",
    "eslint": "9.39.1",
    "eslint-plugin-oxlint": "1.32.0",
    "eslint-plugin-unicorn": "62.0.0",
    "oxlint": "1.32.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.49.0"
  }
}
